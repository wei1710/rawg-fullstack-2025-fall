{
  "compilerOptions": {
    "sourceMap": true, // Generate corresponding '.map' files for debugging
    "inlineSources": true, // Include the original source code in the source maps
    "tsBuildInfoFile": "./node_modules/.tmp/tsconfig.app.tsbuildinfo", // Path for incremental build info
    "target": "ES2022", // Set the JavaScript language version for output files
    "useDefineForClassFields": true, // Use 'define' semantics for class fields
    "lib": ["ES2022", "DOM", "DOM.Iterable"], // Specify library files to include in the compilation
    "module": "ESNext", // Specify module code generation
    "skipLibCheck": true, // Skip type checking of declaration files

    /* Bundler mode */
    "moduleResolution": "bundler", // Use bundler-style module resolution
    "allowImportingTsExtensions": true, // Allow importing TypeScript files with their extensions
    "verbatimModuleSyntax": true, // Preserve import/export syntax as written
    "moduleDetection": "force", // Force module detection in all files
    "noEmit": true, // Do not emit output files
    "jsx": "react-jsx", // Use the new JSX transform for React

    /* Linting */
    "strict": true, // Enable all strict type-checking options
    "noUnusedLocals": true, // Report errors on unused local variables
    "noUnusedParameters": true, // Report errors on unused parameters
    "erasableSyntaxOnly": true, // Only allow erasable syntax
    "noFallthroughCasesInSwitch": true, // Report errors for fallthrough cases in switch statements
    "noUncheckedSideEffectImports": true, // Disallow imports with unchecked side effects
    "noImplicitReturns": true, // Report error when not all code paths in function return a value
    "noImplicitOverride": true, // Ensure that the 'override' modifier is used when overriding methods
    "noPropertyAccessFromIndexSignature": true, // Disallow property access from index signatures
    "noImplicitAny": true, // Raise error on expressions and declarations with an implied 'any' type
    "noImplicitThis": true, // Raise error on 'this' expressions with an implied 'any' type
    "alwaysStrict": true // Parse in strict mode and emit "use strict" for each source file
  },
  "include": ["src"] // Include all files in the 'src' directory
}
